# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/customer_service_db
REDIS_URL=redis://localhost:6379/0

# Telecom API Keys (Use sandbox/test keys)
MTN_API_KEY=your-mtn-sandbox-key
AIRTEL_API_KEY=your-airtel-sandbox-key
GLO_API_KEY=your-glo-sandbox-key
9MOBILE_API_KEY=your-9mobile-sandbox-key

# DISCO API Keys (Use sandbox/test keys)
EKEDC_API_KEY=your-ekedc-sandbox-key
IKEDC_API_KEY=your-ikedc-sandbox-key
AEDC_API_KEY=your-aedc-sandbox-key
PHEDC_API_KEY=your-phedc-sandbox-key
IBEDC_API_KEY=your-ibedc-sandbox-key

# Payment Gateway Keys (Use test keys)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-flw-key

# System Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_WORKERS=4
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
MAX_CONCURRENT_REQUESTS=50

# Transaction Limits (in NGN)
MAX_AIRTIME_AMOUNT=50000
MAX_POWER_AMOUNT=500000
MAX_DATA_AMOUNT=50000

# SLA Settings (in seconds)
RESPONSE_TIME_TARGET=3
ESCALATION_THRESHOLD=300

# Optional: Sandbox Base URLs (hypothetical)
MTN_SANDBOX_BASE_URL=https://api.sandbox.mtn.ng
AIRTEL_SANDBOX_BASE_URL=https://api.sandbox.airtel.ng
EKEDC_SANDBOX_BASE_URL=https://api.sandbox.ekedp.com

# Optional: Alternative Postgres DSN (if not using DATABASE_URL)
POSTGRES_DSN=postgresql+psycopg2://csapp:password@localhost:5432/customer_service_db
